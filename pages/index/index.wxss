/* 轮播图 */
.banners{
  width: 100%;
  height: 300rpx
}
.banners image{
  width: 100%;
  height: 100%;
}
/* 导航区域 */
.navContainer{
  display: flex;
}

.navItem{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navContainer .iconfont{
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  border-radius:50%;
  background:rgb(240, 19, 19);
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  margin:20rpx 0;
}
.navContainer text{
  font-size: 26rpx;
}
/* 推荐歌曲 */
.reCommendContainer{
  padding: 20rpx;
}
.reCommendContainer .header .title{
  font-size: 28rpx;
  color: #333;
}

.reCommendContainer .nav .more{
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  border-radius:20rpx;
  float:right;
  font-size: 24rpx;
}
/* 推荐歌曲内容区域 */
.reCommendContainer .recommendScroll{
  display: flex;
}
.recommendScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.recommendScroll .scrollItem image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
}